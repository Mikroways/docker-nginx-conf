{{if exists "/services/nginx/metadata/nginx-conf/upstream_location_options"}}
upstream app {
  server 127.0.0.1:{{getv "/services/nginx/metadata/nginx-conf/upstream/port"}};
}
{{end}}

server {
  server_name _;
  {{if exists "/services/nginx/metadata/nginx-conf/root"}}root {{getv "/services/nginx/metadata/nginx-conf/root"}}{{else}}root /usr/share/nginx/html;{{end}}

  access_log /var/log/nginx/access.log;
  error_log  /var/log/nginx/error.log;
  
  {{if exists "/services/nginx/metadata/nginx-conf/server_custom_options"}}{{getv "/services/nginx/metadata/nginx-conf/server_custom_options"}}{{end}}

  location / {
    #try_files $uri @app;
    {{if exists "/services/nginx/metadata/nginx-conf/root_location_options"}}{{getv "/services/nginx/metadata/nginx-conf/root_location_options"}}{{end}}
  }

{{if exists "/services/nginx/metadata/nginx-conf/upstream_location_options"}}
  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://app;
    {{getv "/services/nginx/metadata/nginx-conf/upstream_location_options"}}
  }
{{end}}
 
  location {{if exists "/services/nginx/metadata/nginx-conf/static_files_regexp_location"}}{{getv "/services/nginx/metadata/nginx-conf/static_files_regexp_location"}}{{else}}~* \.(ico|css|gif|jpe?g|png|js)(\?[0-9]+)?${{end}} {
    #try_files $uri @app; #En lugar de @app
    #try_files $uri $uri/;
    {{getv "/services/nginx/metadata/nginx-conf/static_files_try_files"}}
    access_log off;
    log_not_found off;
    expires max;
    break ;
  }
}
